<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:id="@+id/layout_boutique"
    android:weightSum="1">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_boutique_thumb"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/nopic"
        android:layout_weight="0.42"/>
    <TextView
        android:id="@+id/tv_boutique_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#d90a0a"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>
    <TextView
        android:id="@+id/tv_boutique_description"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_below="@id/tv_boutique_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>
    <TextView
        android:id="@+id/tv_boutique_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/niv_boutique_thumb"
        android:layout_below="@id/tv_boutique_description"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"/>
</RelativeLayout>